{% extends 'base.html.twig' %}

{% block title %}Author index{% endblock %}

{% block main %}
    <h1>Author index</h1>

    {% if app.request.getPathInfo starts with '/professional' %}
        <section>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de l'auteur</th>
                    <th>Pr√©nom de l'auteur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td>{{ author.id }}</td>
                        <td>{{ author.authorName }}</td>
                        <td>{{ author.authorFirstname }}</td>
                        <td>
                            <a href="{{ path('app_author_show', {'id': author.id}) }}"><i class="bi bi-pencil-square"></i></a>
                            <a href="{{ path('app_author_delete', {'id': author.id}) }}"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_author_new') }}">Create new</a>
        </section>
    {% else %}
        <section class="container--flex-row card-container">
            {% for author in authors %}
                {% include('components/_cardAuthor.html.twig') with {
                    'authorFirstname': author.authorFirstname,
                    'authorName': author.authorName,
                    'authorId': author.id
                } %}
            {% endfor %}
        </section>
    {% endif %}
{% endblock %}
